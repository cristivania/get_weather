<div class="background-pic">
  <div class="header">
    <h1>Want to know the forecast?</h1>
  </div>
<div class="container sign">
  <div class="registration">
    <div class="notice"><%= flash[:notice] %></div>
    <h1>Sign Up</h1>
    <%= form_with(model: @user, url: users_path(@user)) do |f| %>

    <div class="box">
      <div class="form-group row ">
        <span class="col-sm-2 col-form-label inputs-sign-up">
          <%= f.label :Name %>
          <%= f.text_field :first_name, id: :user_first_name %>
        </span>
      </div>

      <div class="form-group row ">
        <span class="col-sm-1 col-form-label inputs-sign-up">
          <%= f.label :email %>
          <%= f.text_field :email , id: :Email %>
        </span>
      </div>

      <div class="form-group row ">
        <span class="col-sm-2 col-form-label inputs-sign-up">
          <%= f.label  :password %>
          <%= f.password_field :password, id: :Password%>
        </span>
      </div>

      <div class="form-group row ">
        <span class="col-sm-2 col-form-label inputs-sign-up">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation , id: :Password_confirmation %>
        </span>
      </div>

      <p class="button">
        <%= f.submit "Sign Up",  class: "btn btn-primary" %>
      </p>
      <% end %>
        <%= link_to "Log In", login_path %>
    </div>
  </div>
</div>
</div>
