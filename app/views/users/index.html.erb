<div class="notice"><%= flash[:notice] %></div>

<h2 class="welcome">Welcome <%= current_user.first_name.capitalize %></h2>
<% current_user.places.each do |place| %>
<div>
  <div class="col-sm-6 col-md-4 ">
    <div class="thumbnail">
      <div class="caption cities-index">
        <h1><%= link_to place.city_name, place(place.id) %></h1>

        <% cache(place,expires_in: 1.minutes) do %>
        <h3><%=WeatherApi.get_weather(place.city_name, @unit)["main"]["temp"].round  %>&#8451;</h3>
        <% end %>

        <p><%= link_to 'Delete', place_path(favorite_city.id), :method => :delete, data: {:confirm => "You sure?"} ,:title => "Delete #{favorite_city.city_name}", class:"btn btn-default"%></p>
      </div>
    </div>
  </div>
</div>
<% end %>
