
<div class="clearfix"></div>
<!-- video background -->
<div class="video-background">
  <div class="video-foreground">
    <iframe src="https://www.youtube.com/watch?v=0_jNjpVxUt0" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
<div class="container sign">
  <div class="registration">
    <div class="notice"><%= flash[:notice] %></div>


    <h1>Log In</h1>
    <%= form_tag( '/login' ) do %>

    <div class="box">
      <div class="form-group row ">
        <span class="col-sm-2 col-form-label inputs" id: :Email>
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </span>
      </div>


      <div class="form-group row">
        <span class="col-sm-2 col-form-label inputs" id: :Password >
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </span>
      </div>

      <p class="button">
        <%= submit_tag 'Log In', class: "btn btn-primary" %>
      </p>


      <% end %>
    </div>
  </div>
</div>
